cd ./bin
rm -rf *
nasm -f elf ../src/libasm.asm -o libasm.o
nasm -f elf ../src/kstart.asm -o kstart.o
nasm -f elf ../src/loader.asm -o kstart.o
gcc -m32 -c  ../src/kernel.c -o kernel.o -fno-builtin
gcc  -m32 -c  ../src/libc.c  -o libc.o -fno-builtin
gcc -m32 -c  ../src/io.c  -o io.o -fno-builtin
gcc -m32 -c  ../src/shell.c  -o shell.o -fno-builtin
gcc -m32 -c  ../src/strings.c  -o strings.o -fno-builtin
gcc -m32 -c  ../src/devices.c -o devices.o -fno-builtin
gcc -m32 -c  ../src/exceptions.c -o exceptions.o -fno-builtin
gcc -m32 -c  ../src/drivers/keyboard.c -o keyboard.o -fno-builtin
gcc -m32 -c  ../src/drivers/mouse.c -o mouse.o -fno-builtin
gcc -m32 -c  ../src/drivers/video.c -o video.o -fno-builtin
ld -m elf_i386 -T ../src/link.ld -o kernel.bin kernel.o kstart.o libc.o libasm.o io.o shell.o devices.o keyboard.o mouse.o video.o exceptions.o strings.o 
cp ./kernel.bin ../isofiles/boot/
